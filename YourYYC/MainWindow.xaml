<Window x:Class="YourYYC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YourYYC"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440"
        >
    <Window.Background>
        <ImageBrush ImageSource="/main_background.png"/>
    </Window.Background>
    <Grid Margin="30">

        <Rectangle HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Top" Width="1380" Fill="#FFF3EFEA" RadiusX="25" RadiusY="25"/>
        <Button Name="HomeButton" Margin="34,3,1136,881">
            <Image Source="home_button.png"/>
        </Button>
        <Button Name="LanguageButton" Margin="1049,10,282,884">
            <Image Source="language_preferences.png"/>
        </Button>
        <Button Name="HelpButton" Margin="1119,8,213,887">
            <Image Source="help_button.png"/>
        </Button>
        <Button Content="Preferences" HorizontalAlignment="Left" Height="53" Margin="1193,5,0,0" VerticalAlignment="Top" Width="151" Click="Button_Click" Background="#FFD94539" FontFamily="Calibri" FontSize="26" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Foreground="#FFF3EFEA">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.283"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>


        <Rectangle HorizontalAlignment="Center" Height="123" Stroke="Black" VerticalAlignment="Top" Width="1380" Margin="0,825,0,0" Fill="#FFF3EFEA" RadiusX="25" RadiusY="25"/>
        <Button Name="PlacesToSeeButton" Margin="100,835,1160,10">
            <Image Source="placesToSee.png" Width="120"></Image>
        </Button>
        <Button Name="LocalEventsButton" Margin="316,835,944,10">
            <Image Source="local_events.png"></Image>
        </Button>
        <Button Name="LocalEatsButton" Margin="522,835,738,10">
            <Image Source="local_eats.png"></Image>
        </Button>
        <Button Name="CityMapButton" Margin="740,835,520,10">
            <Image Source="city_map.png"></Image>
        </Button>
        <Button Name="GettingThereButton" Margin="956,830,298,5">
            <Image Source="getting_there.png"></Image>
        </Button>
        <Button Name="ItineraryButton" Margin="1160,835,100,10">
            <Image Source="itinerary.png"></Image>
        </Button>

    </Grid>
</Window>
