<Window x:Class="YourYYC.EmailExport"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YourYYC"
        mc:Ignorable="d"
        Title="EmailExport" Height="1024" Width="1440">
    <Window.Background>
        <ImageBrush ImageSource="images/itinerary_email_export.png"/>
    </Window.Background>
    <Grid>
        <Button Name="CancelButton" Margin="1340,10,10,925">
            <Image Source="images/cancel.png"/>
        </Button>
        <Button Name="SendButton" Margin="1010,264,298,655">
            <Image Source="images/send.png"/>
        </Button>
        <TextBlock Text="Enter your email" FontSize="36" FontWeight="Bold" Foreground="DimGray"  Margin="525,278,616,680"/>

    </Grid>
</Window>
