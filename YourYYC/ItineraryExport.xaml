<Page x:Class="YourYYC.ItineraryExport"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:test"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ItineraryExport">

    <Page.Background>
        <ImageBrush ImageSource="images/Export_Popup.png"/>
    </Page.Background>
    <Grid>
        <Button x:Name="cancel" Width="60" Height="41" Margin="730,10,10,399">
            <Image Source="images/cancel.png"></Image>
        </Button>
        <Button x:Name="ExportEmail" Margin="404,132,61,245">
            <Image Source="images/email_export.png" Height="64" Width="322"></Image>
        </Button>
        <Button x:Name="ExportText" Margin="404,205,61,172">
            <Image Source="images/text_export.png" Height="64" Width="322"></Image>
        </Button>
        <Button x:Name="ClearSession" Margin="176,352,176,25">
            <Image Source="images/clear_session.png" Height="63" Width="382"></Image>
        </Button>
    </Grid>
</Page>