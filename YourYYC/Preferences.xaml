<Window x:Class="YourYYC.Preferences"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YourYYC"
        mc:Ignorable="d"
        Title="Preferences" Height="1024" Width="1440"
        >
    <Window.Background>
        <ImageBrush ImageSource="images/calgary.png"/>
    </Window.Background>
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="217*"/>
        </Grid.RowDefinitions>

        <Rectangle HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Top" Width="1380" Fill="#FFF3EFEA" RadiusX="25" RadiusY="25"/>
        <Button Name="HomeButton" Margin="34,3,1136,881">
            <Image Source="images/home_button.png"/>
        </Button>
        <Button Name="LanguageButton" Margin="1049,10,282,884">
            <Image Source="images/language_preferences.png"/>
        </Button>
        <Button Name="HelpButton" Margin="1119,8,213,887">
            <Image Source="images/help_button.png"/>
        </Button>
        <Button Content="Preferences" HorizontalAlignment="Left" Height="53" Margin="1193,5,0,0" VerticalAlignment="Top" Width="151" Background="#FFD94539" FontFamily="Calibri" FontSize="26" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" Foreground="#FFF3EFEA">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.283"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Rectangle HorizontalAlignment="Center" Height="123" Stroke="Black" VerticalAlignment="Top" Width="1380" Margin="0,745,0,0" Fill="#FFF3EFEA" RadiusX="25" RadiusY="25" Grid.Row="1"/>
        <Button Name="PlacesToSeeButton" Margin="100,755,1160,10" Grid.Row="1">
            <Image Source="images/placesToSee.png" Width="120"></Image>
        </Button>
        <Button Name="LocalEventsButton" Margin="316,755,944,10" Grid.Row="1">
            <Image Source="images/local_events.png" Height="93" Width="110"></Image>
        </Button>
        <Button Name="LocalEatsButton" Margin="522,755,738,10" Grid.Row="1">
            <Image Source="images/local_eats.png"></Image>
        </Button>
        <Button Name="CityMapButton" Margin="740,755,547,10" Grid.Row="1">
            <Image Source="images/city_map.png"></Image>
        </Button>
        <Button Name="GettingThereButton" Margin="956,750,298,5" Grid.Row="1">
            <Image Source="images/getting_there.png"></Image>
        </Button>
        <Button Name="ItineraryButton" Margin="1160,755,100,10" Grid.Row="1">
            <Image Source="images/itinerary.png"></Image>
        </Button>
        <Grid UseLayoutRounding="True" Margin="10,10,10,169" Grid.Row="1">
            <Rectangle>
                <Image Source="images/preferences_popup.png" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Height="auto">
                </Image>
            </Rectangle>
        </Grid>
    </Grid>
</Window>
