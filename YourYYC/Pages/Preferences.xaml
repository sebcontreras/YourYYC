        <Button Content="Done" Height="50" Width="355" Canvas.Left="735" Canvas.Top="764" Background="#FFD94539" FontFamily="Calibri" FontSize="26" RenderTransformOrigin="0.5,0.5" Foreground="#FFF3EFEA">
            <Button.Resources>
