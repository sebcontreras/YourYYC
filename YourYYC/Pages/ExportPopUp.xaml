<UserControl x:Class="YourYYC.Pages.ExportPopUp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YourYYC.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Background>
        <ImageBrush ImageSource="../images/Export_Popup.png"/>
    </UserControl.Background>
    <Grid Name="exportGrid">
        <Button x:Name="cancel" Width="60" Height="41" Margin="730,10,10,399" Click="cancelButton_Click">
            <Image Source="../images/cancel.png"></Image>
        </Button>
        <Button x:Name="ExportEmail" Margin="404,132,61,245" Click="emailButton_Click">
            <Image Source="../images/email_export.png" Height="64" Width="322"></Image>
        </Button>
        <Button x:Name="ExportText" Margin="404,205,61,172" Click="textButton_Click">
            <Image Source="../images/text_export.png" Height="64" Width="322"></Image>
        </Button>
        <Button x:Name="ClearSession" Margin="176,352,176,25" Click="clearSessionButton_Click">
            <Image Source="../images/clear_session.png" Height="63" Width="382"></Image>
        </Button>
    </Grid>
</UserControl>
