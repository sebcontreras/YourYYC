<UserControl x:Class="YourYYC.AttractionsArt"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YourYYC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel>
            <TextBlock Text="Art" FontSize="36" FontWeight="Bold" Width="1297" Margin="15,15,15,5"/>
        </StackPanel>
        <StackPanel x:Name="Art" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" UseLayoutRounding="False">
            <Button x:Name="ArtsCommon" Width="305" Height="314" Margin="15">
                <Image Source="../images/tiles/downtown_calgary/arts_commons.png"></Image>
            </Button>
            <Button x:Name="StudioBell" Width="305" Height="314" Margin="15">
                <Image Source="../images/tiles/downtown_calgary/studio_bell.png"></Image>
            </Button>
        </StackPanel>
    </StackPanel>
</UserControl>
